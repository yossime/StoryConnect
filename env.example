# StoryConnect Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Moderation Service (optional - for content moderation)
MODERATION_API_URL=your_moderation_service_url
MODERATION_API_KEY=your_moderation_api_key

# OneSignal Push Notifications (optional)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# WhatsApp Integration (optional)
WHATSAPP_VERIFICATION_SERVICE_URL=your_whatsapp_verification_service_url
WHATSAPP_VERIFICATION_API_KEY=your_whatsapp_verification_api_key

# Analytics (optional)
ANALYTICS_ENABLED=true
ANALYTICS_API_URL=your_analytics_service_url

# Development Settings
NODE_ENV=development
DEBUG=true

# App Configuration
APP_NAME=StoryConnect
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Feature Flags
ENABLE_AI_MODERATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_PANEL=true

# Rate Limiting
RATE_LIMIT_STORY_POSTS_PER_HOUR=10
RATE_LIMIT_WHATSAPP_CLICKS_PER_MINUTE=5
RATE_LIMIT_REPORTS_PER_MINUTE=3

# Content Limits
MAX_STORY_TEXT_LENGTH=280
MAX_STORY_IMAGE_SIZE_MB=10
MAX_STORY_VIDEO_SIZE_MB=30
MAX_STORY_VIDEO_DURATION_SECONDS=15

# Privacy Settings
MIN_AGE_REQUIREMENT=13
PRIVACY_POLICY_URL=https://storyconnect.app/privacy
TERMS_OF_SERVICE_URL=https://storyconnect.app/terms

# Localization
DEFAULT_LOCALE=he
SUPPORTED_LOCALES=he,en

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

